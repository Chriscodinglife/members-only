<% flash.each do |name, message| %>
    <div>
        <%= content_tag :div, message, class:name %>
    </div>
<% end %>
<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <%= form.submit "Create Post" %>
<% end %>