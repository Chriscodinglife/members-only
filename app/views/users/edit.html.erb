<% flash.each do |name, message| %>
    <div>
        <%= content_tag :div, message, class:name %>
    </div>
<% end %>
<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :first_name %>
        <%= form.text_field :first_name, value: current_user.first_name %>
    </div>
    <%= form.submit "Update" %>
<% end %>

<%= link_to "Back", user_path(current_user.id) %>